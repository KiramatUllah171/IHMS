@model IHMS.Models.OutPatient
@{
    ViewBag.Title = "AddOutpatient";
    Layout = "~/Areas/Doctor/Views/Shared/MyDoctorMaster.cshtml";
}

<div class="modal fade" id="Modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">OutPatient</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row clearfix">
                    <div class="col-lg-12 col-md-12 col-sm-12">
                        <div class="card">
                            <div class="body">
                                <div class="row">
                                    <input type="hidden" id="hdnoutpatientId" />
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label>Patient *</label>
                                            <div class="form-group form-float" onchange="validdateDropDowns('#ddlPatient', '#msgpat', 'Patient')" id="ddlPatient"></div>
                                            @*<span class="text-danger" id="msgemail"></span>*@
                                        </div>
                                    </div>
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label>Doctor Name<strong class="text-danger">*</strong></label>
                                            <div class="form-group form-float" onchange="validdateDropDowns('#ddlDoctor', '#msgdoc', 'Doctor')" id="ddlDoctor"></div>
                                            @*<span class="text-danger" id="msgName"></span>*@
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label>Date of Discharge *</label>
                                            <input type="datetime-local" onchange="validdate('#txtdischarge', '#msgdischarge', 'Date of Charge');" id="txtdischarge" class="form-control">
                                            <span class="text-danger" id="msgdischarge"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                @*<button class="btn btn-primary" id="btnSubmit" onclick="SubmitData();">Add</button>*@
                                <input type="submit" class="btn btn-raised btn-primary waves-effect" onclick="SubmitData();" id="btnSubmit" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12">
        <div class="card">
            <div class="header">
                <h2>OutPatient Details</h2>
            </div>
            <div class="body">
                <div class="table-responsive">
                    <button type="button" class="btn btn-raised btn-primary waves-effect" data-toggle="modal" data-target="#Modal">
                        Add OutPatient
                    </button>
                    @Html.Partial("_AddOutpatient")
                </div>
            </div>
        </div>
    </div>
</div>




<script type="text/javascript" src="~/Scripts/jquery-3.4.1.js"></script>
<link href="~/IHMSJS/iziToast.css" rel="stylesheet" />
<script src="~/IHMSJS/iziToast.js"></script>
<script src="~/IHMSJS/DoctorJS/Outpatient.js"></script>
