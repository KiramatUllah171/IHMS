@model IHMS.Models.Doctors
@{
    ViewBag.Title = "ProfileEdit";
    Layout = "~/Areas/Doctor/Views/Shared/MyDoctorMaster.cshtml";

}

@using (Html.BeginForm("ProfileEdit", "Dashboard", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

<div class="row">
    @Html.HiddenFor(Model => Model.DoctorId)
    @Html.HiddenFor(model => model.Image)
    <div class="col-lg-6">
        <div class=" form-group">
            <label>Name</label>

            @*@Html.TextBoxFor(model => model.DoctorName, new { @class = "form-control", required = "required" })

            @Html.ValidationMessageFor(model => model.DoctorName)*@

            @Html.TextBoxFor(model => model.DoctorName, new { @class = "form-control", required = "required", pattern = "^[^0-9]+$" })
            @Html.ValidationMessageFor(model => model.DoctorName)


        </div>
    </div>
    <div class="col-lg-6">
        <div class=" form-group">
            <label>Email</label>
            @Html.TextBoxFor(model => model.Email, new { @class = "form-control", @type = "Email", required = "required" })

            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })

        </div>
    </div>
    <div class="col-lg-6">
        <div class=" form-group">
            <label>Contact</label>
            @Html.TextBoxFor(model => model.Contact, new { @class = "form-control", @type = "Number", required = "required" })

            @Html.ValidationMessageFor(model => model.Contact, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="col-lg-6">
        <div class="form-group">
            <label>Password</label>
            <div class="input-group">
                @Html.TextBoxFor(model => model.Password, new { @class = "form-control", @type = "password", required = "required" })
               
            </div>
            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
        </div>

    </div>
    <div class="col-lg-6">
        <div class=" form-group">
            <label>Doctor Fee</label>
            @Html.TextBoxFor(model => model.DoctorFee, new { @class = "form-control", @type = "Number", required = "required" })

            @Html.ValidationMessageFor(model => model.DoctorFee, "", new { @class = "text-danger" })
        </div>

    </div>

    <div class="col-lg-6">
        <div class=" form-group">
            <label>Image</label>
            @Html.TextBoxFor(model => model.Image, new { type = "file", @class = "form-control", required = "required" })
            @Html.ValidationMessageFor(model => model.Image, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="col-lg-6">
        <div class=" form-group">
            <label>Education</label>
            @Html.TextBoxFor(model => model.Education, new { @class = "form-control", required = "required" })

            @Html.ValidationMessageFor(model => model.Education, "", new { @class = "text-danger" })

        </div>
    </div>
    <div class="col-lg-6">
        <div class="form-group">
            <label>Department</label>
            @Html.DropDownListFor(model => model.DepartmentId, new SelectList(ViewBag.dep, "DepartmentId", "DepartmentName"),
                                                          new { @class = "form-control border-danger" })
        </div>
    </div>
    <div class="col-lg-6">
        <div class="form-group">
            <label>Gender</label>
            @Html.DropDownListFor(model => model.Status, new SelectList(ViewBag.status, "Value", "Text"), new { @class = "form-control border-danger", required = "required" })
        </div>
    </div>
    <div class="col-md-3">

        <input type="submit" name="Update" value="Update" class="btn btn-primary" />
    </div>
</div>
        }


