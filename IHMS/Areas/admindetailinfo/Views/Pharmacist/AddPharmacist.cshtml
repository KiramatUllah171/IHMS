@model IHMS.Models.Pharmacist
@{
    ViewBag.Title = "Pharmacist";
    Layout = "~/Areas/admindetailinfo/Views/Shared/MyAdminMaster.cshtml";
}

<div class="modal fade" id="Modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Pharmacist</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row clearfix">
                    <div class="col-lg-12 col-md-12 col-sm-12">
                        <div class="card">
                            <div class="body">
                                <div class="row">
                                    <input type="hidden" id="hdnpharmacistId" />
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label>Name<strong class="text-danger">*</strong></label>
                                            <input type="text" onchange="validdate1('#txtname', '#msgName', 'Name');" id="txtname" class="form-control" placeholder="Name">
                                            <span class="text-danger" id="msgName"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label>Email *</label>
                                            <input type="email" onchange="validdate2('#txtemail', '#msgemail', 'Email');" id="txtemail" class="form-control" placeholder="example@email.com">
                                            <span class="text-danger" id="msgemail"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label>Contact *</label>
                                            <input type="number" onchange="validdate('#txtcontact', '#msgcon', 'Contact');" id="txtcontact" class="form-control" placeholder="0912345678">
                                            <span class="text-danger" id="msgcon"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <input type="hidden" id="hdnImage" />
                                            <label>Image *</label>
                                            <input type="file" onchange="validdate('#txtimage', '#msgimg', 'Image');" id="txtimage" class="form-control">
                                            <span class="text-danger" id="msgimg"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label>Password *</label>
                                            <input type="password" onchange="validdate('#txtpassword', '#msgpas', 'Password');" id="txtpassword" class="form-control">
                                            <span class="text-danger" id="msgpas"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label>Gender</label>
                                            <select class="form-control" onchange="validdateDropDowns('#ddlgender', '#msggender', 'Gender');" id="ddlgender">
                                                <option value="-1">----Select Gender----</option>
                                                <option value="Male">Male</option>
                                                <option value="Female">Female</option>
                                            </select>
                                            <span class="text-danger" id="msggender"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label>Status</label>
                                            <select class="form-control" onchange="validdateDropDowns('#ddlstatus', '#msgCatStatus', 'Status');" id="ddlstatus">
                                                <option value="-1">----Select Status----</option>
                                                <option value="1">Active</option>
                                                <option value="0">InActive</option>
                                            </select>
                                            <span class="text-danger" id="msgCatStatus"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                @*<button class="btn btn-primary" id="btnSubmit" onclick="SubmitData();">Add</button>*@
                                <input type="submit" class="btn btn-raised btn-primary waves-effect" onclick="SubmitData();" id="btnSubmit" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12">
        <div class="card">
            <div class="header">
                <h2>Pharmacist Details</h2>
            </div>
            <div class="body">
                <div class="table-responsive">
                    <button type="button" class="btn btn-raised btn-primary waves-effect" data-toggle="modal" data-target="#Modal">
                        Add Pharmacist
                    </button>
                    <table class="table table-bordered table-striped table-hover dataTable js-exportable">
                        <thead>
                            <tr>
                                <th>Sno:</th>
                                <th>Image</th>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Contact</th>
                                <th>Password</th>
                                <th>Gender</th>
                                <th>Status</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody id="mytable">
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>




<script type="text/javascript" src="~/Scripts/jquery-3.4.1.js"></script>
<link href="~/IHMSJS/iziToast.css" rel="stylesheet" />
<script src="~/IHMSJS/iziToast.js"></script>
<script src="~/IHMSJS/AdminJS/Pharmacist.js"></script>




