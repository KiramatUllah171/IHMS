      <section id="course-part" class="pt-115 pb-120 gray-bg">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <div class="section-title pb-45">
                    <h5>Our Treatments</h5>
                    <h2>Featured Treatments </h2>
                </div> <!-- section title -->
            </div>
        </div> <!-- row -->
        <div class="row course-slied mt-30">

            @foreach (var item in ViewBag.doctor)
            {
            <div class="col-lg-4">
                <div class="singel-course">
                    <div class="thum">
                        <div class="image">
                            <img src="../../../../UploadImage/@item.MyDoctor.Image" width="150" height="300" alt="User">
                        </div>
                        <div class="price">
                            <span>Paid</span>
                        </div>
                    </div>
                    <div class="cont">
                        <ul>
                            <li><i class="fa fa-star"></i></li>
                            <li><i class="fa fa-star"></i></li>
                            <li><i class="fa fa-star"></i></li>
                            <li><i class="fa fa-star"></i></li>
                            <li><i class="fa fa-star"></i></li>
                        </ul>
                        <a href="@Url.Action("AddDashboard","Dashboard","Patient")"><h4><span>@item.MyDepartment.DepartmentName</span></h4></a>
                        <div class="course-teacher">
                            <div class="thum">
                                <img src="../../../../UploadImage/@item.MyDoctor.Image" alt="teacher">
                            </div>
                            <div class="name">
                                <a href="@Url.Action("AddDashboard","Dashboard","Patient")"><h6>@item.MyDoctor.DoctorName</h6></a>
                            </div>
                        </div>
                    </div>
                </div> <!-- singel course -->
            </div>
            }
        </div> <!-- course slied -->
    </div> <!-- container -->
</section>

