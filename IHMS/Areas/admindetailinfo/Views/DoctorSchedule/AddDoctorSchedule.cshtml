@model IHMS.Models.DoctorSchedule

@{
    ViewBag.Title = "DoctorSchedule";
    Layout = "~/Areas/admindetailinfo/Views/Shared/MyAdminMaster.cshtml";

}


<div class="modal fade" id="Modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Doctor Schedule</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row clearfix">
                    <div class="col-lg-12 col-md-12 col-sm-12">
                        <div class="card">
                            <div class="body">
                                <div class="row">
                                    <input type="hidden" id="hdndoctorscheduleId" />
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label>Doctor Name<strong class="text-danger">*</strong></label>
                                            @Html.DropDownListFor(x => x.DoctorId, new SelectList(ViewBag.doctor, "DoctorId", "DoctorName"),
                                           new { @class = "form-control", required = "required", onchange = "Select();" })
                                            
                                            @*<span class="text-danger" id="msgName"></span>*@
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <input type="hidden" id="hdndepartmentId" />
                                            <label>Department *</label>
                                            @*<input type="text" id="departmentId" class="form-control">*@
                                            @Html.TextBoxFor(m => m.DepartmentId, new
                                                {
                                                    id = "departmentId",
                                                    @class = "form-control input-lg label_16",
                                                    @placeholder = "Department",
                                                    @disabled = "disabled"
                                                })

                                            @*<div class="form-group form-float" id="departmentId"></div>*@
                                            

                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label>Schedule Date *</label>
                                            <input type="date" onchange="validdate('#txtDate', '#msgdate', 'Schedule Date')" id="txtDate" class="form-control">
                                            <span class="text-danger" id="msgdate"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label>Start Time *</label>
                                            <input type="time" onchange="validdate('#txttime', '#msgtime', 'Start Time')" id="txttime" class="form-control">
                                            <span class="text-danger" id="msgtime"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label>End Time *</label>
                                            <input type="time" onchange="validdate('#txtendtime', '#msgendtime', 'End Time')" id="txtendtime" class="form-control">
                                            <span class="text-danger" id="msgendtime"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label>Consulting time *</label>
                                            <input type="time" onchange="validdate('#txtcontime', '#msgcontime', 'Consulting Time')" id="txtcontime" class="form-control">
                                            <span class="text-danger" id="msgcontime"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                @*<button class="btn btn-primary" id="btnSubmit" onclick="SubmitData();">Add</button>*@
                                <input type="submit" class="btn btn-raised btn-primary waves-effect" onclick="SubmitData();" id="btnSubmit" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12">
        <div class="card">
            <div class="header">
                <h2>Doctor Schedule Details</h2>
            </div>
            <div class="body">
                <div class="table-responsive">
                    <button type="button" class="btn btn-raised btn-primary waves-effect" data-toggle="modal" data-target="#Modal">
                        Add Doctor Schedule
                    </button>
                    @Html.Partial("_AddDoctorSchedule")
                </div>
            </div>
        </div>
    </div>
</div>




<script type="text/javascript" src="~/Scripts/jquery-3.4.1.js"></script>
<link href="~/IHMSJS/iziToast.css" rel="stylesheet" />
<script src="~/IHMSJS/iziToast.js"></script>
<script src="~/IHMSJS/AdminJS/DoctorSchedule.js"></script>




